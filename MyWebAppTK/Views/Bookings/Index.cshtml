@model IEnumerable<BookingsModel>
@{
    ViewData["Title"] = "Index";
}



<h1 class="text-center"> Bookings</h1>
<div class="container p-4">
    <div class="row-4">
  
        <div class="col-6 ">
            <a class="btn btn-primary"  asp-action="Create" asp-controller="Bookings"><i class="bi bi-plus-circle-fill"></i>&nbsp; Add New Booking</a>
            <input type="text" id="search" name="search" ><br><br>
            <a class="btn btn-primary" asp-action="Create" asp-controller="Bookings"><i class="bi bi-search"></i>&nbsp; Search</a>


        </div>

    </div>

</div>




<table class="table table-bordered table-striped"  style= "width:100%">
     <thead>
        <tr>
            <th>
                Client Name
            </th>
            <th>
                DOB
            </th>
            <th>
                Email
            </th>
            <th>
                Client City
            </th>
            <th>
                Display Bookings
            </th>
            <th>
                Booking Date
            </th>
            <th>
                Action

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>
                @item.Client_Name
            </td>
            <td>
                @item.DateOfBirth
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.Client_City
            </td>
            <td>
                @item.Display_Booking
            </td>
            <td>
                @item.Booking_Date
            </td>
            <td role="group">
                    <a asp-controller="Bookings" asp-action="Edit" asp-route-id="@item.Booking_Id">
                    <i class="bi bi-pencil-square"></i>
                    </a>&nbsp;&nbsp;&nbsp;

                    <a asp-controller="Bookings" asp-action="Delete" asp-route-id="@item.Booking_Id">
                        <i class="bi bi-trash3-fill"></i>
                    </a>
            </td>
        </tr>
        }

    </tbody>
    
</table>

